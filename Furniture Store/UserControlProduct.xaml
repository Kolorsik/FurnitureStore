<UserControl x:Class="Furniture_Store.UserControlProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Furniture_Store"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="150" Width="232">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <StackPanel>
                <TextBlock TextAlignment="Center" x:Name="Title" FontFamily="Cooper Black" Foreground="#FFC00000" />
                <Image x:Name="img" Margin="10" Width="70" Height="70" Source="Assets/chair.png" Stretch="UniformToFill" />
                <Button x:Name="About" Content="Подробнее" FontSize="14" Click="About_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>